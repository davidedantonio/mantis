<!doctype html>
<html>
	<head>
		<title>Mantis</title>
		<!-- Viewport mobile tag for sensible mobile support -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
		<link rel="stylesheet" href="./assets/css/bootstrap.css">
	</head>
	<body ng-app="MantisApplication">
    <div id='page-container' ng-controller="UsersController">
      <div class="panel panel-default login-panel">
        <div class="panel-body text-center">
          <header>
              <img src="../assets/images/mantis_logo.png" />
              <h2>Signin</h2>
          </header>
          <form class="form-login" role="form" name="userForm" method="post" action="/signin">
              <div class="row">
                  <input class="form-control" type="email" name="email" ng-model="user.email" placeholder="email..." ng-minlength="5" ng-maxlength="30" required />
              </div>
              <div class="row">
                  <input class="form-control" type="password" name="password" ng-model="user.password" placeholder="password..." required />
              </div>
              <div class="row">
                <div ng-cloak ng-messages="userForm.password.$error" ng-if="interacted(userForm.password)">
                    <!-- the required message is displayed first... -->
                    <div ng-message="required" class="error-messages">You forgot to enter your Password...</div>
                </div>
              </div>
							<!-- Display flash messages  -->
							<% for(var i in messages) { %>
							   <div class="error-messages"><%= messages[i] %></div>
							<% } %>
              <div class="row">
                <button type="submit" class="btn btn-info btn-block">LOGIN</button>
                <a href="/signup" class="btn btn-warning btn-block">I DON'T HAVE AN ACCOUNT</a>
              </div>
          </form>
      </div>
    </div>

    <footer class="copyright">
        Crafted with <i class="fa fa-heart"></i> by Deid
    </footer>
    </div>
  </div>

	<script src="./assets/js/dependencies/underscore.min.js"></script>
